@page
@model owlo_plan.Pages.MyProjectsModel
@{
    ViewData["Title"] = $"OWLO Plan - My Projects";
    ViewData["Page"] = "My Projects";

}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Current Projects</h4> <br /><a href="/OwloPlan/CreateProject" class="btn btn-primary btn-sm"><i class="fas fa-plus me-2"></i>Create New Project</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.AllMyProjects.Count > 0)
                    {
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th><strong>Project Title</strong></th>
                                    <th><strong>Owner</strong></th>
                                    <th><strong>Status</strong></th>

                                    <th><strong></strong></th>
                                    <th><strong></strong></th>

                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var project in Model.AllMyProjects)
                            {
                                <tr>
                                    <td><strong>@project.Title</strong></td>
                                    <td><div class="d-flex align-items-center"><span class="w-space-no">@project.Owner</span></div></td>
                                    @if (project.Published == true)
                                    {
                                        <td><div class="d-flex align-items-center"><span class="w-space-no text-success">Published</span></div></td>

                                    }
                                    else
                                    {
                                        <td><div class="d-flex align-items-center"><span class="w-space-no text-warning">Not Published</span></div></td>

                                    }
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <a asp-page="/OwloPlan/ManageProject" asp-route-id="@project.Project_ID" class="btn btn-primary">Manage</a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <a asp-page="/OwloPlan/PublishProject" asp-route-id="@project.Project_ID" class="btn btn-info">Publish</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            </table>
                    }
                    else
                    {  
                        <h1 class="text-center">This looks empty, try creating or joining a project!</h1>
                    }

                </div>
            </div>
        </div>
    </div>


