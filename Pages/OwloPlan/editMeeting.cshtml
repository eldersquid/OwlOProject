@page "{id}"
@model OwlOProjectA.Pages.OwloPlan.editMeetingModel
@{
    ViewData["Title"] = $"OWLO Plan - Update Meeting";
    ViewData["Page"] = "Update Meeting";
}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Meeting</h4>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form id="form2" asp-page-handler="deletemeeting" asp-route-projectid="@Model.meeting.Project_ID" asp-route-id="@Model.meeting.Meeting_ID">
            </form>
            <form id="form1" method="post">
                <input asp-for="meeting.Meeting_Caller" value="@Model.meeting.Meeting_Caller" type="hidden" />

                <input asp-for="meeting.Meeting_ID" value="@Model.meeting.Meeting_ID" type="hidden" />

                <input asp-for="meeting.Project_ID" value="@Model.meeting.Project_ID" type="hidden" />

                <div class="mb-3 row">
                    <div class="col-sm-9">
                        <h2 class="text-danger col-sm-3 col-form-label">@Model.ErrorMessage</h2>
                        <div asp-validation-summary="All"></div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-3 col-form-label">Title</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="meeting.Title" value="@Model.meeting.Title" class="form-control" placeholder="Title of meeting?">
                        <span asp-validation-for="meeting.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-3 col-form-label">Description</label>
                    <div class="col-sm-9">
                        <textarea type="text" asp-for="meeting.Description" class="form-control" placeholder="What is this meeting about">@Model.meeting.Description</textarea>
                        <span asp-validation-for="meeting.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-3 col-form-label">Link</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="meeting.platform_link" value="@Model.meeting.platform_link" class="form-control" placeholder="A link so your members can see you">
                        <span asp-validation-for="meeting.platform_link" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex align-items-end flex-column">
                    <h4 class="fs-20 mb-3"></h4>
                    <div>
                        <button form="form2" type="submit" class="btn btn-outline-primary">Delete</button>
                        <button form="form1" type="submit" onkeydown="return event.key != 'Enter'" ; class="btn btn-primary">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}