@page "{id}"
@model owlo_plan.Pages.SelectProjectToInviteModel
@{
    ViewData["Title"] = $"OWLO Plan - Invite";
    ViewData["Page"] = "Select a project to invite the user to";

}

<div class="tab-content">
    <div class="tab-pane fade show active" id="Boxed" role="tabpanel">
        <div class="row">
            @foreach (var task in Model.AllMyProjects)
            {
                <div class="col-xl-3 col-xxl-4 col-md-4 col-sm-6">
                    <form id="form1" asp-page-handler="InviteToProject" asp-route-id="@Model.userid" asp-route-projectid="@task.Project_ID" method="post">
                        <a onclick="myFunction()">
                            <div class="card">
                                <div class="jobs2 card-body">
                                    <div class="text-center">
                                        <h4 class="fs-20 mb-0">@task.Title</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </form>

                </div>
            }
        </div>
    </div>

</div>
<script>
    function myFunction() {
        document.getElementById("form1").submit();
    }
</script>