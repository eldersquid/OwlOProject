@page "{id}"
@model OwlOProjectA.Pages.Workshop_Pages.planWorkshopModel
@{
    Layout = "_wsLayout";
}
<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
                <span></span> <a href="/Workshop_Pages/myWorkshop">My Workshops</a> <span></span> @Model.workshop.Name
            </div>
        </div>
    </div>
    <div class="page-content mb-50">
        <div class="container">
            <div class="row mb-50 pr-30">
                <div class="col-lg-9">
                    <div class="shop-product-fillter">
                        <div class="totall-product">
                            <h2>
                                @Model.workshop.Name
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div>
                        <a asp-page="/Workshop_Pages/viewWorkshop" asp-route-id="@Model.workshop.Workshop_ID" class="nav-link btn btn-link">View Workshop</a>
                    </div>
                </div>
                <hr />
            </div>
            <div class="row">
                <div class="col-lg-12  mb-50 pr-30">
                    <div class="shop-product-fillter">
                        <div class="totall-product">
                            <h2>
                                Planning
                            </h2>

                        </div>
                    </div>
                    <hr />
                </div>
                <div style="text-align:center">
                    <h2><strong>No Planning Materials yet..</strong></h2>
                    <form method="post">
                        <button type="submit" formmethod="post" class="nav-link btn btn-link">Start by Creating!</button>
                    </form>

                </div>

            </div>
            <div class="row mb-50 pr-30">
                <div class="col-lg-12 mb-50 pr-30">
                    <div class="shop-product-fillter mb-50 pr-30">
                        <div class="totall-product">
                            <h2>
                                Venue
                            </h2>
                        </div>
                    </div>
                    <hr />
                </div>
                <div style="text-align:center">
                    <h2><strong>Book a Venue</strong></h2>
                    <a asp-page="/Workshop_Pages/browseVenues" asp-route-id="@Model.workshop.Workshop_ID" class="nav-link btn btn-link">Book Now!</a>

                </div>
            </div>
        </div>
    </div>
</main>